<mah:MetroWindow  x:Class="WindowsStoreClone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:WindowsStoreClone"
        xmlns:uc="clr-namespace:WindowsStoreClone.UserControls"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="800" Width="1350">
    <Grid>
        <Frame Name="MainWindowFrame"
               Loaded="MainWindowFrame_Loaded"
               NavigationUIVisibility="Hidden"
               Height="{Binding ElementName=MainWindowMetro, Path=ActualHeight}"
               Width= "{Binding ElementName=MainWindowMetro, Path=ActualWidth}"
               Visibility="Visible"
            />

    </Grid>
</mah:MetroWindow>
